            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .admin-link:hover {
            opacity: 1;
            transform: scale(1.05);
        }
        
        /* BOUTON Gateaux (en bas √† droite) */
        .admin-products {
            bottom: 20px;
            right: 20px;
            background: var(--accent);
            color: var(--dark);
        }
        
        /* BOUTON COMMANDES (au-dessus du bouton produits) */
        .orders-link {
            position: fixed;
            bottom: 70px;
            right: 20px;
            background: var(--secondary);
            color: white;
            padding: 10px 15px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: bold;
            box-shadow: 0 4px 15px rgba(139, 69, 19, 0.2);
            z-index: 100;
            opacity: 0.7;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .orders-link:hover {
            opacity: 1;
            transform: scale(1.05);
        }
        
        /* CART */
        .cart-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(139, 69, 19, 0.5);
            z-index: 1001;
        }
        
        .cart-sidebar {
            position: fixed;
            top: 0;
            right: -380px;
            width: 380px;
            height: 100%;
            background: white;
            box-shadow: -5px 0 30px rgba(139, 69, 19, 0.2);
            transition: right 0.4s ease;
            z-index: 1002;
            display: flex;
            flex-direction: column;
        }
        
        .cart-sidebar.active {
            right: 0;
        }
        
        .cart-header {
            background: var(--dark);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .cart-header h3 {
            font-size: 1.6em;
        }
        
        .close-cart {
            background: none;
            border: none;
            color: white;
            font-size: 1.5em;
            cursor: pointer;
        }
        
        .cart-items {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }
        
        .cart-item {
            display: flex;
            align-items: center;
            padding: 15px;
            margin-bottom: 12px;
            background: var(--light);
            border-radius: 8px;
            border-left: 4px solid var(--primary);
            gap: 15px;
        }
        
        .cart-item-image {
            width: 60px;
            height: 60px;
            border-radius: 5px;
            overflow: hidden;
            flex-shrink: 0;
        }
        
        .cart-item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .cart-item-info {
            flex: 1;
        }
        
        .cart-item-info h4 {
            color: var(--dark);
            margin-bottom: 5px;
            font-size: 1em;
        }
        
        .cart-item-price {
            color: var(--primary);
            font-weight: bold;
            font-size: 0.9em;
        }
        
        .cart-item-quantity {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 5px;
        }
        
        .quantity-btn {
            background: #FFE4CC;
